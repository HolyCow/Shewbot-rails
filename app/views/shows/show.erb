<p id="notice"><%= notice %></p>


<h2><%= @show.title %> <%= @show.episode_number %></h2>

<p>
  <%= @show.created_at.to_formatted_s(:long) %>
</p>

<table class="table">
	<tr>
		<th>Title</th>
		<th>Submitter</th>
		<th>Votes</th>
	</tr>
<% @titles.each do |title| %>
	<tr>
    <td><%= title.title %></td>
    <td><%= link_to title.irc_user.name, irc_user_path(title.irc_user.id) %></td>
    <td><%= title.votes_count %></td>
  </tr>
<% end %>  
</table>

